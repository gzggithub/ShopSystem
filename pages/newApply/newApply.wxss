.newApply_image {
  width: 100%;
  height: 560rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.example {
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  background-color: rgba(43, 43, 43, 0.3);
  position: absolute;
  top: 0;
  /* right: 14%; */
  right: 104rpx;
  z-index: 9;
  font-size: 12px;
  text-align: center;
  /* color: #207ce9; */
  color: #FFFFFF;
}

.newApply_image_img {
  width: 546rpx;
  height: 560rpx;
  /* background-color: #42a0ff; *//* border-radius: 16rpx; */
}

.mycanvas {
  /* border: 1px solid #e0e0e0; */
}

.modal_item {
  text-align: center;
}

.modal_item:first-child {
  position: relative;
  padding-top: 30rpx;
}

.modal_item_color {
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: #2ad221;
  border: 2rpx solid #FFFFFF;
  font-size: 20rpx;
  color: #FFFFFF;
  border-radius: 100%;
  position: absolute;
  bottom: 10rpx;
  right: 204rpx;
}

.modal_item:nth-child(2) {
  padding: 5px 0 17px;
  font-size: 14px;
  color: #7b7b7b;
}

.modal_item:nth-child(3) {
  font-size: 14px;
  color: #7b7b7b;
}

.modal_item:last-child {
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal_item image {
  width: 156rpx;
  height: 156rpx;
}

.modal_item_index {
  margin: 16rpx 12rpx 0 12rpx;
}

.modal_item_index view {
  text-align: center;
}

.modal_item_index view text {
  font-size: 12px;
  color: #7b7b7b;
}

.apply_tip_msg {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 12px;
}

.apply_tip_msg .apply_tip_msg_item view {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 12px;
  font-weight: bolder;
  color: #fff;
  border-radius: 80px;
  margin-right: 10px;
}

.apply_tip_msg .apply_tip_msg_item.apply_tip_msg_item_color_warn view{
  background-color: #FFB945;
}

.apply_tip_msg .apply_tip_msg_item.apply_tip_msg_item_color_x view {
  background-color: #ff3200;
}

.apply_tip_msg .apply_tip_msg_item.apply_tip_msg_item_color view {
  background-color: #2ed900;
}

.apply_tip_msg .apply_tip_msg_item text {
  font-size: 16px;
  color: #4a4a4a;
}

.newApply_start.restart_style_top {
  margin-top: 0 !important;
  padding-top: 0;
}

.newApply_start .apply_btn.restart_style {
  background-color: #fff;
  border: 1px solid #207ce9;
  color: #207ce9;
}

.myCanvasCopy{
  position: absolute;
  top:0;
  z-index: 1;
}


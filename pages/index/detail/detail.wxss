/* pages/index/detail/detail.wxss */

.home_detail_container {
  padding-top: 20rpx;
}

.detail_item {
  height: 96rpx;
  padding: 0 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid rgba(242, 242, 242, 100);
  font-size: 14px;
  color: #323232;
}

.detail_item.detail_item_first {
  height: 116rpx;
}

.active {
  background: linear-gradient(to right, #f5a523 3%, #fff 3%);
}

.active_color {
  color: #f5a523;
}

.detail_item_left {
  width: 160rpx;
  color: #767676;
}

.detail_item_right {
  flex: 1;
}

.detail_item_remark {
  padding: 20rpx 40rpx 20rpx;
  font-size: 12px;
  color: #7c86a2;
}

.detail_restar_apply {
  height: 116rpx;
  line-height: 116rpx;
  margin-top: 20rpx;
  background-color: #fff;
  text-align: center;
  font-size: 16px;
  color: #207ce9;
}

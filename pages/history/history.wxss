/* pages/history/history.wxss */

.history_container {
  width: 100%;
  box-sizing: border-box;
  padding-top: 88rpx;
}

/* 顶部导航 start  */

.history_swiper_tab {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 99;
}

.history_swiper_tab_list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  text-align: center;
  color: #777;
  background: #fff;
}

.on_orange {
  color: #f5a623;
  border-bottom: 1rpx solid #f5a623;
}

.on_blue {
  color: #207ce9;
  border-bottom: 1rpx solid #207ce9;
}

.on_red {
  color: #ed4413;
  border-bottom: 1rpx solid #ed4413;
}

.history_swiper1_box {
  width: 100%;
  height: 600px;
}

.history_swiper_item {
  width: 100%;
  display: flex;
}

.history_big_box {
  width: 100%;
  background: #fff;
}

.history_big_month {
  height: 80rpx;
  /* line-height: 80rpx; */
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: #f5f7fa;
  font-size: 14px;
}

.history_big_item {
  width: 100%;
  height: 140rpx;
  padding-left: 20px;
  display: flex;
  border-bottom: 5px solid #f5f7fa;
}

.history_order {
  width: 32rpx;
  height: 32rpx;
  margin-top: 5px;
  margin-right: 10px;
  line-height: 32rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 12px;
  color: #fff;
}

.history_company {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 14px;
  color: #4a4a4a;
}

.history_time {
  height: 60rpx;
  font-size: 12px;
  color: #979797;
}

.left_order {
  width: 80rpx;
  text-align: center;
}

.order {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 100%;
  text-align: center;
}

.create_apply {
  width: 108rpx;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  background-color: #FFFFFF;
  font-size: 16px;
  color: #979797;
  border-radius: 100%;
  position: fixed;
  bottom: 174rpx;
  right: 56rpx;
  z-index: 9999;
  box-shadow: #3242a0ff 0 0 6px;
}

.create_apply_inner {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 22rpx auto;
  border: 1px solid #2b2b2b;
  border-radius: 100%;  
}

.create_apply_inner_circul {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin: 10rpx auto 0;
  background: linear-gradient(to bottom, #78ceff 0%, #6cc4ff 1%, #207ce9 100%);
  border-radius: 100%;
  color: #2b2b2b;
}

.no_record {
  background-color: #ed4413;
}

.click_apply {
  padding: 40rpx 0;
}

.click_apply_btn {
  width: 80%;
  background-color: #207ce9;
  font-size: 16px;
  color: #fff;
}

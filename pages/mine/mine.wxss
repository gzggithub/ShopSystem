/* pages/mine/mine.wxss */

.mine_container {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.mine_header {
  width: 100%;
  height: 159px;
  background: #33474f;
}

.mine_header_head {
  display: flex;
  padding-top: 60px;
  padding-left: 20px;
}

.mine_header_head_left {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  text-align: center;
  line-height: 50px;
  background-color: #fff;
  border-radius: 100%;
}

.mine_header_head_right {
  flex: 1;
  height: 50px;
  line-height: 25px;
  color: #fff;
}

.mine_header_head_top {
  display: flex;
}

.mine_header_head_name {
  font-size: 18px;
  padding-right: 10px;
}

.mine_header_head_location {
  font-size: 12px;
}

.mine_header_head_company {
  font-size: 16px;
}

.mine_header_one {
  width: 100%;
  height: 375rpx;
  background-color: #fff;
  text-align: center;
}

.mine_header_head_one{
  padding: 28rpx 0 24rpx;
}

.mine_header_head_one_img {
  width: 128rpx;
  height: 128rpx;
  vertical-align: middle;
  border-radius: 100%;
  background-color: #207ce9;
}

.mine_header_head_two {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 22rpx 0 20rpx;
}

.mine_header_head_name {
  font-size: 18px;
  /* padding-right: 10px; */
}

.mine_header_head_location {
  font-size: 12px;
  color: #979797;
}

.mine_header_head_company {
  padding-bottom: 26rpx;
  font-size: 14px;
  color: #979797;
}

.mine_state_L {
  width: 100%;
  background-color: #fff;
}

.mine_state {
  display: flex;
  width: 80%;
  height: 140rpx;
  align-items: center;
  margin: 0 auto;
  /* margin-top: -30px; */
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
}

.mine_state_wait, .mine_state_pass, .mine_state_reject {
  flex: 1;
  text-align: center;
}

.mine_state_pass {
  border-left: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
}
.mine_state_wait_num {
  font-size: 16px;
}

.mine_state_wait_text {
  font-size: 12px;
  color: #979797;
}

.mine_main {
  /* height: 600rpx; */
  margin-top: 10px;
  background-color: #fff;
  color: #4a4a4a;
}

.mine_main_item {
  display: flex;
  padding: 0 24px 0 22px;
  height: 100rpx;
  line-height: 100rpx;
  /* border-bottom: 1px solid #e0e0e0; */
}

.mine_main_item_left {
  width: 50px;
}

.mine_header_head_location_icon image,
.min_main_item_left image{
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

.mine_main_item_center {
  flex: 1;
  margin-left: 12px;
  font-size: 16px;
}

.mine_main_item_right {
  margin-right: -11px;
  position: relative;
}

.mine_main_item_right:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.mine_loginout {
  width: 100%;
  height: 50px;
  line-height: 50px;
  margin-top: 10px;
  background: #fff;
  text-align: center;
  font-size: 16px;
  color: #207ce9;
}

.login {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
}

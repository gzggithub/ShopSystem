/* pages/mine/detail/detail.wxss */

.mine_detail_container {
  padding-top: 20rpx;
}

.detail_item {
  height: 100rpx;
  padding: 0 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #EAEAEA;
}

.detail_item:first-child {
  height: 156rpx;
}

.detail_item:last-child {
  border-bottom: none;
}

.detail_item_left {
  width: 80px;
  font-size: 16px;
  color: #4a4a4a;
}

.detail_item_right {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #4a4a4a;
}

.mine_header_head_one_img {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  border-radius: 100%;
  background-color: #207ce9;
}

.modalInput{
  height: 90rpx;
  /* margin-top: 20rpx; */
  padding-left: 24rpx;
  background-color: #eff3f7;
  color: #4a4a4a;
}